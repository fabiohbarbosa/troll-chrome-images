{
  "manifest_version": 2,
  "name": "Troll Chrome Images",
  "description": "Troque todas as fotos dos sites por fotos pr√©-selecionadas",
  "version": "0.5",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "assets/img/icon.png",
    "48": "assets/img/icon.png",
    "128": "assets/img/icon.png" 
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "contextMenus"
  ]
}
